<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->


        <item name="colorPrimaryVariant">@color/buz</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/buz</item>
        <item name="colorOnSecondary">@color/cinza</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/buz</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/white</item>
        <item name="textAllCaps">false</item>

        <item name="android:textColor">@color/buz</item>
        <item name="android:textColorHint">@color/buz</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_light</item>

    </style>

    <style name="Theme.Login.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="Theme.Login.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Login.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="search_view_theme">
        <item name="colorSecondary">#8A9399</item>
        <item name="searchBackground">#1A2229</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">Pesquisar Viatura</item>
        <item name="hintColor">#8A9399</item>
        <item name="backIconTint">#8A9399</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">#8A9399</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>